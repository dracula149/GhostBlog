<nav class="pagination is-medium" role="navigation" aria-label="pagination">
    {{#if prev}}
    <a href="{{page_url prev}}" class="pagination-next">Newer Post</a>
    {{/if}}

    <span class="pagination-link is-current">Page {{page}} of {{pages}}</span>

    {{#if next}}
         <a href="{{page_url next}}" class="pagination-previous">Older Post</a>
    {{/if}}
</nav>